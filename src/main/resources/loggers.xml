<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <!-- simple bean -->
    <bean id="consoleEventLogger" class="ConsoleEventLogger"/>

    <!-- invoke initialization method-->
    <bean id="fileEventLogger" class="FileEventLogger"
          init-method="init">
        <constructor-arg value="/home/kotdavinci/test/filename.txt"/>
    </bean>

    <!-- destroy method and inheritance-->
    <bean id="cacheFileEventLogger" class="CacheFileEventLogger"
          parent="fileEventLogger"
          destroy-method="destroy">
        <constructor-arg value="3"/>
    </bean>

</beans>

